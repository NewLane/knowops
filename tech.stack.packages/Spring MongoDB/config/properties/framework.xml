<!-- framework properties -->

<framework>

<!-- Presentation Tier Properties -->

  <presentation-tier
    UserSessionObjectManagerClassName="${aib.getRootPackageName()}.#getCommonPackageName().ApplicationUSOM"
    USOM_MAX="-1"	
    USOM_MAX_CHECK_PERIOD_IN_MILLIS="10000"	
    ApplicationID="${aib.getApplicationName()}"
  /> 

<!-- end Presentation Tier -->


<!-- Integration tier properties -->

  <integration-tier 
    DefaultDatabaseConnectionName="TheDBConnection"
    JMS_QUEUE_FACTORY="javax.jms.QueueConnectionFactory"
    JMS_TOPIC_FACTORY="javax.jms.TopicConnectionFactory"
    DEFAULT_LDAP_CONNECTION_NAME="MyLDAPConnection"
    DEFAULT_LOG_HANDLER_NAME="FrameworkDefaultLog"
    BONotification="FALSE"
    JNDIEJBNamePrefix="${aib.getJNDIEJBPrefix()}"	
    JMXSelfRegistration="TRUE"
    TASK_MDB_WRAPPER_IN_USE="false"
    SOAPServerURI="${aib.getSOAPParameters().getSOAPServerURL()}"
    FrameworkEventsEnabled="FALSE"
    JMX_MBEAN_SERVER_IMPLEMENTATION="com.cloudmigrate.framework.common.jmx.StandardJMXServerFactory"
    FrameworkUIDGenerator="com.cloudmigrate.framework.common.uid.FrameworkUIDGenerator" 
    DAO_CACHE_INTERNALLY="false" 
    DefaultTimeFormat="hh:mm:ss"
    DefaultDateFormat="MM/dd/yyyy"
    DefaultTimestampFormat="hh:mm:ss MM/dd/yyyy"
	AuditTrailInterceptor="com.cloudmigrate.framework.integration.persistent.FrameworkHibernatorInterceptor"
	AxisTypeMappingRegistry="${aib.getRootPackageName()}.#getAxisPackageName().AxisTypeMappingRegistry"	  
	  
  /> <!-- end Integration Tier -->
  
<!-- ESB Related properties -->
<!-- AIB : \#esbProperties() -->        
#esbProperties()
<!-- ~AIB -->
<!-- end ESB -->

