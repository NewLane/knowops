#xmlHeader()
<?xml version="1.0" encoding="UTF-8"?>
<portlet-app id="${aib.getApplicationName()}PortletAppID" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd /opt/SUNWps/dtd/portlet.xsd" version="4.0.5">
<portlet-app id="${aib.getApplicationName()}PortletAppID" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd /opt/SUNWps/dtd/portlet.xsd" version="4.0.5">
  <portlet id="${aib.getApplicationName()}Portlet">
    <init-param>
      <name>ServletContextProvider</name>
      <value>org.apache.jetspeed.portlet.ServletContextProviderImpl</value>
    </init-param>
    <init-param>
      <name>ViewPage</name>
#if ( $aib.getParams().presentationTierParams.portalParams.usingPortalLogon == true )      
      <value>/HOMEPAGE.do</value>
#else
      <value>/Logon.do</value>
#end     
    </init-param>
    <portlet-name>${aib.getApplicationName()}Portlet</portlet-name>
    <display-name>${aib.getApplicationName()}Portlet</display-name>
    <description>${aib.getApplicationName()} Portlet</description>
    <portlet-class>org.apache.portals.bridges.struts.StrutsPortlet</portlet-class>
    <expiration-cache>-1</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
      <portlet-mode>VIEW</portlet-mode>
    </supports>
    <portlet-info>
      <title>${aib.getApplicationName()}</title>
      <keywords>Struts</keywords>
    </portlet-info>
  </portlet>
</portlet-app>